{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter (Debug)",
      "type": "dart",
      "request": "launch",
      "program": "frontend/lib/main.dart",
      "cwd": "frontend"
    },
    {
      "name": "Flutter (Windows)",
      "type": "dart",
      "request": "launch",
      "program": "frontend/lib/main.dart",
      "cwd": "frontend",
      "toolArgs": ["-d", "windows"]
    },
    {
      "name": "Backend (Node.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}